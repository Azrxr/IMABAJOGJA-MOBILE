<resources xmlns:tools="http://schemas.android.com/tools">
        <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">

            <!-- 🌈 Warna Brand -->

            <item name="colorPrimary">@color/maroon_primary</item>
            <item name="colorPrimaryVariant">@color/maroon_primary_variant</item>
            <item name="colorOnPrimary">@color/maroon_on_primary</item>
            <item name="colorSecondary">@color/maroon_secondary</item>
            <item name="colorOnSecondary">@color/maroon_on_primary</item>

            <!-- 🎨 Latar & Permukaan -->
            <item name="android:colorBackground">@color/backgroundColor</item>
            <item name="colorSurface">@color/surfaceColor</item>
            <item name="colorOnSurface">@color/textColorPrimary</item>

            <!-- 📝 Teks -->
            <item name="android:textColor">@color/textColorPrimary</item>
            <item name="android:textColorPrimary">@color/textColorPrimary</item>
            <item name="android:textColorSecondary">@color/textColorSecondary</item>

            <!-- ⚠️ Error -->
            <item name="colorError">@color/errorColor</item>

            <!-- 🧱 Status & Navigasi -->
            <item name="android:statusBarColor">@color/maroon_primary</item>
            <item name="android:windowTranslucentStatus">true</item>
            <item name="android:navigationBarColor">@android:color/black</item>
            <!-- Jika ingin status bar icon terang -->
<!--            <item name="android:windowLightStatusBar">true</item>-->

            <!-- 🔤 Font default jika dibutuhkan -->
            <item name="fontFamily">@font/poppins_regular</item> <!-- Ganti sesuai projectmu -->
        </style>

    <style name="Theme.IMABAJogja" parent="Theme.MyApp" />

    <style name="Theme.App.Starting" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/maroon_primary</item>
    </style>

    <!-- Style for TextInputLayout -->
    <style name="til" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxStrokeColor">@color/blue</item>
        <item name="colorControlNormal">@color/maroon_primary</item>
    </style>

    <!-- Style for TextInputEditText -->
    <style name="edt" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:scrollbars">vertical</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">center_vertical</item>
    </style>
