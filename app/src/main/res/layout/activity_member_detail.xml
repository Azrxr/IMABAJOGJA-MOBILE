<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.member.MemberDetailActivity">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/textHeaderS_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/detail_anggota"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elevation="4dp"
                app:cardBackgroundColor="?attr/colorPrimary"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:elevation="4dp"
                        app:cardCornerRadius="45dp"
                        app:cardElevation="4dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/ivProfile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?attr/colorPrimary"
                            android:contentDescription="@string/profile"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_user" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvName"
                        style="@style/textBodyL_bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/name_example"
                        android:textColor="?attr/colorOnPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/cardView2"
                        app:layout_constraintTop_toTopOf="@+id/cardView2" />

                    <TextView
                        android:id="@+id/tvPhoneNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/number_example"
                        android:textColor="?attr/colorOnPrimary"
                        app:layout_constraintEnd_toEndOf="@+id/tvName"
                        app:layout_constraintStart_toStartOf="@+id/tvName"
                        app:layout_constraintTop_toBottomOf="@+id/tvName" />

                    <TextView
                        android:id="@+id/tvPlaceDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/birth_place_date"
                        android:textColor="?attr/colorOnPrimary"
                        app:layout_constraintEnd_toEndOf="@+id/tvPhoneNumber"
                        app:layout_constraintStart_toStartOf="@+id/tvPhoneNumber"
                        app:layout_constraintTop_toBottomOf="@+id/tvPhoneNumber" />

                    <TextView
                        android:id="@+id/tvAddress"
                        style="@style/textBodyS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/full_address"
                        android:textColor="?attr/colorOnPrimary"
                        app:layout_constraintEnd_toEndOf="@+id/tvPlaceDate"
                        app:layout_constraintStart_toStartOf="@+id/tvPlaceDate"
                        app:layout_constraintTop_toBottomOf="@+id/tvPlaceDate" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elevation="4dp"

                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        style="@style/textBodyL_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="keanggotaan" />

                    <TextView
                        style="@style/textBodyS"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingBottom="4dp"
                        android:text="@string/no_anggota" />

                    <TextView
                        android:id="@+id/tvNoMember"
                        style="@style/textBodyL_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/no_anggota" />

                    <TextView
                        style="@style/textBodyS"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:paddingBottom="4dp"
                        android:text="@string/angkatan" />

                    <TextView
                        android:id="@+id/tvAngkatan"
                        style="@style/textBodyL_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/angkatan" />

                    <TextView
                        style="@style/textBodyS"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:paddingBottom="4dp"
                        android:text="@string/status" />

                    <TextView
                        android:id="@+id/memberType"
                        style="@style/textBodyL_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/status" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elevation="4dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        style="@style/textBodyL_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="@string/studi_saat_ini" />

                    <TextView
                        style="@style/textBodyS"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingBottom="4dp"
                        android:text="@string/perguruan_tinggi" />

                    <TextView
                        android:id="@+id/tvUniversityCurrent"
                        style="@style/textBodyL_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/perguruan_tinggi" />

                    <TextView
                        style="@style/textBodyS"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:paddingBottom="4dp"
                        android:text="@string/fakultas" />

                    <TextView
                        android:id="@+id/tvFacultyCurrent"
                        style="@style/textBodyL_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fakultas" />

                    <TextView
                        style="@style/textBodyS"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:paddingBottom="4dp"
                        android:text="@string/program_studi" />

                    <TextView
                        android:id="@+id/tvProgramStudy"
                        style="@style/textBodyL_bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/program_studi" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>