<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewCampusPlan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:context=".ui.campus.AddStudyPlanActivity">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_university"
            android:contentDescription="@string/nama_perguruan_tinggi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPerguruanTinggi"
            style="@style/textBodyM_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxLines="1"
            android:text="@string/nama_perguruan_tinggi"
            android:textAlignment="textStart"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toStartOf="@+id/btnDelete"
            app:layout_constraintStart_toEndOf="@+id/imageView" />



        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_study"
            android:contentDescription="@string/study"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/tvProgramStudy"
            style="@style/textBodyM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxLines="1"
            android:text="@string/program_studi"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <TextView
            android:id="@+id/textView5"
            style="@style/textBodyM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jenjang"
            app:layout_constraintStart_toStartOf="@+id/tvProgramStudy"
            app:layout_constraintTop_toBottomOf="@+id/tvProgramStudy" />

        <TextView
            style="@style/textBodyM"
            android:id="@+id/tvJenjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/jenjang"
            app:layout_constraintBottom_toBottomOf="@+id/textView5"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView5" />


        <AutoCompleteTextView
            android:id="@+id/dropdownStatus"
            android:background="@drawable/bg_rounded10"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:visibility="gone"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="@+id/tvJenjang"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/tvStatus"
            android:background="@drawable/bg_rounded10"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/status"
            android:visibility="visible"
            android:textColor="?attr/colorOnPrimary"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="@+id/tvJenjang"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/btnDelete"
            style="@style/ShapeAppearanceOverlay.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/delete"
            android:textAlignment="textEnd"
            android:textColor="@color/design_default_color_error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvPerguruanTinggi" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>