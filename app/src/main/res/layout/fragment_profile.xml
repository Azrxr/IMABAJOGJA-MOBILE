<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.profile.ProfileFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progressIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/textHeaderS_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/profile"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/btnAbout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressIndicator" />

    <ImageButton
        android:id="@+id/btnAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/about"
        android:src="@drawable/ic_about"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTitle" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:elevation="4dp"
                app:cardCornerRadius="45dp"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/profile"
                    android:background="?attr/colorPrimary"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_user" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvName"
                style="@style/textBodyL_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/name_example"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cardView2"
                app:layout_constraintTop_toTopOf="@+id/cardView2" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/email_example"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintEnd_toEndOf="@+id/tvName"
                app:layout_constraintStart_toStartOf="@+id/tvName"
                app:layout_constraintTop_toBottomOf="@+id/tvName" />

            <TextView
                android:id="@+id/tvPhoneNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/number_example"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintEnd_toEndOf="@+id/tvEmail"
                app:layout_constraintStart_toStartOf="@+id/tvEmail"
                app:layout_constraintTop_toBottomOf="@+id/tvEmail" />

            <TextView
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:text="Edit"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintEnd_toEndOf="@+id/tvPhoneNumber"
                app:layout_constraintTop_toBottomOf="@+id/tvPhoneNumber" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="4dp"

        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                style="@style/textBodyL_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/biodata" />

            <!-- Full Name -->
            <TextView
                style="@style/textBodyS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fullname" />

            <TextView
                android:id="@+id/tvFullname"
                style="@style/textBodyL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/fullname" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="?attr/colorOnSurface"
                android:layout_marginBottom="8dp" />

            <!-- Place & Date of Birth -->
            <TextView
                style="@style/textBodyS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/place_date" />

            <TextView
                style="@style/textBodyL"
                android:id="@+id/tvPlaceDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/place_date" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="?attr/colorOnSurface"
                android:layout_marginBottom="8dp" />

            <!-- Gender -->
            <TextView
                style="@style/textBodyS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gender" />

            <TextView
                style="@style/textBodyL"
                android:id="@+id/tvGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/gender" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="?attr/colorOnSurface"
                android:layout_marginBottom="8dp" />

            <!-- Religion -->
            <TextView
                style="@style/textBodyS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/religion" />

            <TextView
                style="@style/textBodyL"
                android:id="@+id/tvReligion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/religion" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="?attr/colorOnSurface"
                android:layout_marginBottom="8dp" />

            <!-- NISN -->
            <TextView
                style="@style/textBodyS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nisn" />

            <TextView
                style="@style/textBodyL"
                android:id="@+id/tvNISN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/nisn" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="?attr/colorOnSurface"
                android:layout_marginBottom="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                style="@style/textBodyL_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keanggotaan"
                android:layout_marginBottom="16dp" />

            <TextView
                style="@style/textBodyS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_anggota" />

            <TextView
                android:id="@+id/tvNoMember"
                style="@style/textBodyL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_anggota" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="4dp"
                android:background="?attr/colorOnSurface"/>

            <TextView
                style="@style/textBodyS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/angkatan" />
            <TextView
                android:id="@+id/tvGeneration"
                style="@style/textBodyL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/angkatan" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="4dp"
                android:background="?attr/colorOnSurface" />

            <TextView
                style="@style/textBodyS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/jenis_anggota" />
            <TextView
                android:id="@+id/tvType"
                style="@style/textBodyL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/jenis_anggota" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="?attr/colorOnSurface"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                style="@style/textBodyL_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Kontak dan Alamat" />

            <TextView
                style="@style/textBodyS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phone_number" />
            <TextView
                android:id="@+id/tvPhone"
                style="@style/textBodyL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phone_number" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="?attr/colorOnSurface"
                android:layout_marginTop="4dp" />

            <TextView
                style="@style/textBodyS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/full_address" />
            <TextView
                android:id="@+id/tvAddress"
                style="@style/textBodyL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/full_address" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="?attr/colorOnSurface"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView5">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            style="@style/textBodyL_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setting" />

        <Button
            android:textAllCaps="false"

            android:id="@+id/btnChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_password"/>

        <Button
            android:id="@+id/btnLogout"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/log_out"/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>